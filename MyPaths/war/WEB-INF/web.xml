<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>pathsService</servlet-name>
    <servlet-class>com.MyPaths.server.PathsServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>pathsService</servlet-name>
    <url-pattern>/myPaths/pathsService</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>searchPathsService</servlet-name>
    <servlet-class>com.MyPaths.server.SearchPathsServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>searchPathsService</servlet-name>
    <url-pattern>/myPaths/searchPathsService</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>sortPathsService</servlet-name>
    <servlet-class>com.MyPaths.server.SortPathsServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>sortPathsService</servlet-name>
    <url-pattern>/myPaths/sortPathsService</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>MyPaths.html</welcome-file>
  </welcome-file-list>

</web-app>
